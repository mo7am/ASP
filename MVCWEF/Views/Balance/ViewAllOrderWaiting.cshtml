@using MVCWEF.Models;
@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<MyViewModel>


@{
    Layout = null;

}
<h2>ViewAllOrderWaiting</h2>
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <table class="table">
        <thead>
            <tr class="success">
                <th>
                    UserID
                </th>
                <th>
                    Name
                </th>
                <th>
                    OrderDate
                </th>
                <th>
                    PaymentType
                </th>

                <th>
                    CustomerPhone
                </th>
                <th>
                    CustomerAddress
                </th>
                <th>
                    Quantity
                </th>
                <th>
                    Total Price
                </th>
                <th>
                    ProductName
                </th>
                <th>
                    Price
                </th>
                <th>
                    Image
                </th>


            </tr>
        </thead>

        @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.order.UserID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.users.Fname + " " + item.users.Lname)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.order.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.order.PaymentType)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.order.CustomerPhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.order.CustomerAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.orderdetails.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.orderdetails.TotalPrice)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.products.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.products.Price)
            </td>
            <td>
                <img src="@Url.Content(item.products.Image)" width="100" height="100" />
            </td>


        </tr>
}

    </table>
    <div class="clear"></div>
    @if (@Model.PageCount > 1)
    {
        <span> page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) /@Model.PageCount </span>
        <div class="div-pagination">
            @Html.PagedListPager(Model, page => Url.Action("IndexWaitingOrder", new { page = page }))
        </div>
    }
</body>
</html>