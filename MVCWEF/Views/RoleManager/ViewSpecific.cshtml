    ViewBag.Title = "ViewSpecific";
    Layout = "~/Views/Shared/_MainLayoutAdmin.cshtml";
}

<h2>ViewSpecific</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
